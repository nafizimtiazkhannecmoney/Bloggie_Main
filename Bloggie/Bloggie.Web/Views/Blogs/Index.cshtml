@model Bloggie.Web.Models.Domain.BlogPost

@{
	ViewData["Title"] = Model.PageTitle;
}


<div class="container my-5">
	<div class="row justify-content-center">
		<div class="col-12 col-lg-6">
			@if (Model != null)
			{
				<h1>@Model.Heading</h1>
				<div class="d-flex justify-content-between mb-3">
					<span class="text-muted">Author: @Model.Author</span>
					<span class="text-muted">Published on: @Model.PublishedDate.ToShortDateString()</span>
				</div>

				<div>
					@foreach (var tag in Model.Tags)
					{
						<span class="badge bg-secondary mb-3">@tag.Name</span>
					}
				</div>
				<img src="@Model.FeaturedImageUrl" alt="@Model.Heading" class="img-fluid mb-3" />
				<div class="mb-3">
					@Html.Raw(Model.Content)
				</div>
			}
			else
			{
				 <p>Blog post not found.</p>
			}
		</div>
	</div>
</div>